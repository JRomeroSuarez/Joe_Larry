<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@drawable/inicio_sesion_sin_letra">

    <EditText
            android:hint="@string/correo"
            android:textCursorDrawable="@android:color/white"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:id="@+id/txtUsuario"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.462"
            android:layout_marginTop="44dp" app:layout_constraintTop_toBottomOf="@+id/txtInicio"
            android:textColorLink="@android:color/background_light" android:singleLine="false"/>
    <EditText
            android:hint="@string/password"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txtPassword" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/txtUsuario" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.457"
            android:textColorLink="@android:color/white" />

    <Button
            android:text="@string/logearse"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/btnIniciar" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/txtPassword"
            android:fontFamily="@font/shermlock" android:background="@drawable/boton_vacio"
            android:textSize="20sp" android:textColor="@color/marron" app:layout_constraintHorizontal_bias="0.502"/>
    <TextView
            android:text="@string/login"
            android:layout_width="233dp"
            android:layout_height="57dp"
            android:id="@+id/txtInicio"
            android:textSize="34sp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textColor="@color/marron"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="parent" android:fontFamily="@font/shermlock"/>
    <Button
            android:text="@string/registrarse"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/btnRegistrarse" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/btnIniciar" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/shermlock" android:background="@drawable/boton_vacio"
            android:textSize="20sp" android:textColor="@color/marron" app:layout_constraintHorizontal_bias="0.502"/>
</android.support.constraint.ConstraintLayout>