            android:text="@string/title_activity_tutorial"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:id="@+id/btnTuto" android:fontFamily="@font/shermlock"
            android:textSize="20sp" android:textColor="@color/marron" android:background="@drawable/boton_vacio"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="76dp"
            android:layout_marginBottom="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/barVolSonido"
